@*<h2 class="text-center" >@ViewBag.Title</h2>*@
<h3 class="text-center">Welcome to Smart Healthcare Systems</h3>
<div class="row">
    @Html.AntiForgeryToken()

    @*<div class="col-md-8 contentContainer text-center">*@
    <div class="contentContainer">
        <div class="center-block">
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        <label for="txtUserName" class="control-label">User Name</label>
                        <input type="text" value="" id="txtUserName" class="form-control" />
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-md-10 col-md-offset-1">
                        <label for="txtPwd" class="control-label">Password</label>
                        <input type="password" value="" id="txtPwd" class="form-control" />
                    </div>
                </div>
                <br />
                <button id="btnLogin" class="btn btn-success center-block">Log In</button>
                <br />
            </form>
        </div>
    </div>

</div>
