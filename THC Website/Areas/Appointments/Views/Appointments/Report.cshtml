                    $('#cellScheduled').html(numScheduled);
                    $('#cellConfirmed').html(numConfirmed);
                    $('#cellComplete').html(numComplete);
                    $('#cellRescheduled').html(numRescheduled);
                    $('#cellNoShows').html(numNoShow);

