                        case '247':
                            numScheduled++;
                            break;
                        case '248':
                            numConfirmed++;
                            break;
                        case '249':
                            numComplete++;
                            break;
                        case '250':
                            numRescheduled++;
                            break;
                        case '252':
                            numNoShow++;
                            break;
